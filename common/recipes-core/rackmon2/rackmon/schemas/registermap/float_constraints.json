{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "definitions": {
    "if": {
      "properties": {
        "format": {
          "const": "FLOAT"
        }
      },
      "required": ["format"]
    },
    "then": {
      "required": ["precision"]
    },
    "else": {
      "properties": {
        "precision": false,
        "scale": false,
        "shift": false
      }
    }
  }
}
